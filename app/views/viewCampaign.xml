<Alloy>
	<Window id="viewCampaign" >	
	<ScrollView id="scroll" width="100%" scrollType="vertical">
		<View height="Ti.Platform.displayCaps.platformHeight + 100" id="viewScroll">
			<ActivityIndicator id="activity"/>
			
			<VideoPlayer id="vp" />
			<View id="data">	
				<Label id="title" />
				<Label id="author" />
				<View id="content">
					<Label id="titleDescription">Description:</Label>
					<Label id="description" />
					<Label id="readmore">Read more</Label>
				</View>	
				<Label id="categoryName" />
				<View id="campaignInfo">
					    <Label id="accomplished"/>
					    <Label id="percentage" />
					    <Label id="days" />
					    <Label id="total" />
		    	</View>
			</View>	
			<View id="givebacks">
				<Label id="givebacksTitle">Givebacks:</Label>
				<TableView id="table"/>
			</View>		
		</View>
	</ScrollView>
	<View id="donate">
			<Button id="buttonDonate" title="Donate"/>
		</View>		
	</Window>
</Alloy>