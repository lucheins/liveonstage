<Alloy>
	<Window id="viewEvent" backgroundColor="white" >	
		<ScrollView id="scroll" width="100%" height="100%" scrollType="vertical" top="0">	
		<ActivityIndicator id="activity"/>
		<View id="container"  top="0">
			<View id="data">
				<ImageView id="image"/>
				<View id="topdata">
					<Label id="title" />
				</View>
				<View id="bottomdata">
					<Label id="author" />
					<Label id="date" />
					<Label id="views"/>
				</View>
			</View>
		<View id="content">
			<Label id="titleDescription">Description:</Label>
			<Label id="description" />
		</View>	
		<View id="other">
		<Label id="otherEvents">Other events from this Artist:</Label>
		</View>	
		</View>	
		<View id="viewTable">
			<TableView id="table"/>
			</View>
		</ScrollView>	
	</Window>
</Alloy>