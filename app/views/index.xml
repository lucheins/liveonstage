<Alloy>
	<Window id="index">
		<View id="Navigation">
			
			<ImageView id="logo" image="/images/logo-liveon.png"/>
    		<View class="navigationBottomBorder"/>
    	</View>
		<View id="banner">
			<View id="overlay">
				<View id="gradient"/>
			</View>
			<Label class="promo">Promoting your music with Live Video</Label>
		</View>
		<View id="buttoncontainer">
			<View class="buttonsTopBorder"/>
			<View id="topButtons" class="topButtons">
				<View id="liveShows" class="first">
					<ImageView class="menu-icon" image="/images/bolt.png" />
					<Label class="menu-label">Browser</Label>
				</View>
			</View>
			<View id="bottomButtons" class="bottomButtons">
				<View id="upcomingEvents" class="first">
					<ImageView class="menu-icon" image="/images/upcoming.png" />
					<Label class="menu-label">Go Live!</Label>
				</View>				
			</View>
		</View>
	</Window>
</Alloy>