<Alloy>
	<Window id="index">
		<View id="Navigation">
			<ImageView id="logo" image="/images/logo-liveon.png"/>
    		<View class="navigationBottomBorder"/>
    	</View>
		<View id="banner">
			<View id="overlay">
				<View id="gradient"/>
			</View>
			<Label class="promo">Promoting your music with Live Video</Label>
		</View>
		<View id="buttoncontainer">
			<View class="buttonsTopBorder"/>
			<View class="topButtons">
				<View id="liveShows" class="first"></View>
				<View id="Campaigns" class="second"></View>
			</View>
			<View class="bottomButtons">
				<View id="upcomingEvents" class="first"></View>
				<View id="artists" class="second"></View>
			</View>
		</View>
	</Window>
</Alloy>